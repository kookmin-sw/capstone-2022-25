<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scene.write_result_4.write_result_4">


    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/seat_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/seat_score"
        android:text="좌석 위치"/>

    <TextView
        android:id="@+id/seat_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seat_location"
        app:layout_constraintStart_toStartOf="@id/seat_location"
        app:layout_constraintBottom_toTopOf="@id/seat_review"
        android:text="좌석 평점"/>

    <TextView
        android:id="@+id/seat_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seat_score"
        app:layout_constraintStart_toStartOf="@id/seat_location"
        app:layout_constraintBottom_toTopOf="@id/seat_review_text"
        android:text="좌석 후기"/>

    <EditText
        android:id="@+id/seat_review_text"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/seat_review"
        app:layout_constraintBottom_toTopOf="@id/musical_review"
        android:hint="시야, 음향, 조명, 배우들의 동선 등 상세 후기를 작성해 주세요^^"
        android:background="@drawable/reacta"/>

    <TextView
        android:id="@+id/musical_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seat_review_text"
        app:layout_constraintStart_toStartOf="@id/seat_location"
        app:layout_constraintBottom_toTopOf="@id/musical_review_text"
        android:text="관람 후기"/>

    <EditText
        android:id="@+id/musical_review_text"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/musical_review"
        app:layout_constraintBottom_toTopOf="@id/hashtag"
        android:hint="보고 느낀 생생한 후기를 남겨주세요!"

        android:background="@drawable/reacta"/>

    <TextView
        android:id="@+id/hashtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/musical_review_text"
        app:layout_constraintStart_toStartOf="@id/seat_location"
        app:layout_constraintBottom_toTopOf="@id/write_complete"
        android:text="해쉬 태그"/>

    <Button
        android:id="@+id/write_complete"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#EC4C4C"
        android:text="후기 작성 완료"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hashtag" />







</androidx.constraintlayout.widget.ConstraintLayout>